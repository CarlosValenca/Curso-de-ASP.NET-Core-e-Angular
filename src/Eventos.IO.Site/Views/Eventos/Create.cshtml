@using Eventos.IO.Application.ViewModels

@model Eventos.IO.Application.ViewModels.EventoViewModel

@{
    ViewData["Title"] = "Registrar Novo Evento";
}

<h2>@ViewData["Title"]</h2>

<!-- Aqui temos o arquivo de estilo para poder utilizar dentro do html dentro dos campos data -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.min.css" rel="stylesheet" type="text/css" />

<h4>Preencha todos os dados corretamente</h4>
<hr />

<form asp-action="Create">
    <div class="form-horizontal">

        <vc:Summary />

        <div class="form-group">
            <label asp-for="Nome" class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DescricaoCurta" class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <input asp-for="DescricaoCurta" class="form-control" />
                <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DescricaoLonga" class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <textarea rows="5" asp-for="DescricaoLonga" class="form-control"></textarea>
                <span asp-validation-for="DescricaoLonga" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Categoria" class="col-md-4 control-label"></label>
            <div class="col-md-4">
                @Html.Partial("_Categorias")
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DataInicio" class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <input asp-for="DataInicio" class="form-control" type="text" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DataFim" class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <input asp-for="DataFim" class="form-control" type="text" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Gratuito" /> @Html.DisplayNameFor(model => model.Gratuito)
            </label>
        </div>

        <div class="form-group">
            <label asp-for="Valor" class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <input data-val-number="O valor está em formato inválido" data-val-required="O valor é requerido" asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Online" /> @Html.DisplayNameFor(model => model.Online)
            </label>
        </div>

        <div class="form-group">
            <label asp-for="NomeEmpresa" class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <input asp-for="NomeEmpresa" class="form-control" />
                <span asp-validation-for="NomeEmpresa" class="text-danger"></span>
            </div>
        </div>

        <!-- Para criar esta DIV eu criei uma partial view baseada no endereco e puxei dela os form-group e customizei eles aqui dentro-->
        <div id="EnderecoForm">
            <hr />
            <h3>Endereço</h3>
            <div class="form-group">
                <label asp-for="Endereco.Logradouro" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="Endereco.Logradouro" class="form-control" />
                    <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Numero" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="Endereco.Numero" class="form-control" />
                    <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Complemento" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="Endereco.Complemento" class="form-control" />
                    <span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Bairro" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="Endereco.Bairro" class="form-control" />
                    <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.CEP" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="Endereco.CEP" class="form-control" />
                    <span asp-validation-for="Endereco.CEP" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Cidade" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <input asp-for="Endereco.Cidade" class="form-control" />
                    <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Endereco.Estado" class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    @Html.Partial("_Estados")
                    <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-4">
                <input id="btSubmit" type="submit" value="Registrar" class="btn btn-success" />
                <a asp-action="MeusEventos" class="btn btn-info">Voltar para a lista</a>
            </div>
        </div>
    </div>
</form>

